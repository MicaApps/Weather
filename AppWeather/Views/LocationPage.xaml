        <Grid.RowDefinitions>
            <RowDefinition Height="461*"/>
            <RowDefinition Height="540*"/>
        </Grid.RowDefinitions>
        <Grid Grid.RowSpan="2">
            <Grid.Resources>
                <bindconverter:LocationGridViewContentConverter x:Key="ContentConverter"/>
                <bindconverter:LocationGridViewHolderConverter x:Key="HolderConverter"/>
            </Grid.Resources>
