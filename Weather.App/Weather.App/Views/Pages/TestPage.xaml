<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="Weather.App.Views.Pages.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Weather.App.Views.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:Weather.App.ViewModels.Pages"
      Background="Transparent"
      mc:Ignorable="d">

    <Page.DataContext>
        <vm:TestPageViewModel x:Name="ViewModel"/>
    </Page.DataContext>

    <StackPanel Margin="30" Spacing="20">
        <TextBlock Text="Key"/>
        <TextBox Text="{x:Bind ViewModel.Key, Mode=TwoWay}"/>
        <TextBlock Text="Location"/>
        <TextBox Text="{x:Bind ViewModel.Location, Mode=TwoWay}"/>
        <Button Command="{x:Bind ViewModel.QueryCityCommand}" Content="Query"/>
        <ScrollViewer Height="500">
            <TextBox IsReadOnly="True"
                     Text="{x:Bind ViewModel.CityQueryResult, Mode=OneWay}"
                     TextWrapping="Wrap"/>
        </ScrollViewer>
    </StackPanel>
</Page>
