<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="Weather.App.Views.Pages.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Weather.App.Views.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Background="Transparent"
      mc:Ignorable="d">

    <StackPanel Margin="30" Spacing="20">
        <TextBlock Text="Key"/>
        <TextBox x:Name="TbKey"/>
        <TextBlock Text="Location"/>
        <TextBox x:Name="TbLocation" Text=""/>
        <Button Click="Button_Click" Content="Query"/>
        <ScrollViewer Height="500">
            <TextBox x:Name="TbResult"
                     IsReadOnly="True"
                     TextWrapping="Wrap"/>
        </ScrollViewer>
    </StackPanel>
</Page>
