<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="Weather.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="using:Weather.App"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d">

    <Window.SystemBackdrop>
        <!--<MicaBackdrop Kind="BaseAlt"/>-->
        <DesktopAcrylicBackdrop/>
    </Window.SystemBackdrop>

    <NavigationView x:Name="nvSample" Background="Transparent">
        <NavigationView.MenuItems>
            <NavigationViewItem Background="Transparent"
                                Content="主页.tr"
                                Icon="Find"/>
            <NavigationViewItem Background="Transparent"
                                Content="城市.tr"
                                Icon="List"/>
        </NavigationView.MenuItems>
        <Frame x:Name="contentFrame" Background="Transparent"/>
    </NavigationView>
</Window>
